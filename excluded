# personal commands list from bot.py



def command_uptime():
    if cd.cduptime == 0:
        send_message(cfg.CHAN, '420am69pm')
        cd.cduptime = 1

        def testchange():
            cd.cduptime = 0

        t = Timer(30.0, testchange)
        t.start()


def command_commands():
    if cd.cdcommands == 0:
        send_message(cfg.CHAN, 'I am a meme bot! Here is a list of available commands : http://pastebin.com/KChvqDGW ')
        cd.cdcommands = 1

        def testchange():
            cd.cdcommands = 0

        t = Timer(30.0, testchange)
        t.start()


